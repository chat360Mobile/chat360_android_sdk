<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/cha360logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/chat360_logo"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="100dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonOpenActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/open_activity"
        android:textAllCaps="false"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonOpenActivityFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/buttonOpenActivity"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/open_activity_fragment"
        android:textAllCaps="false"/>


</androidx.constraintlayout.widget.ConstraintLayout>